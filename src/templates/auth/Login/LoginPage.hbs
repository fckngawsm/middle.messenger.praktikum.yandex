{{#> AuthContainer}}
    {{#> FormWrapper}}
      <h1 class="form__title">Вход</h1>
      {{#> Form id="login-form"}}
          {{> Input id="login" type="text" placeholder="Логин" name='login' label="Логин" required="true"}}
          {{> Input id="password" type="password" placeholder="Пароль" name="password" label="Пароль" required="true"}}
      {{/Form}}
      {{#> Spacer}}{{/Spacer}}
      <div class="button__group">
        {{#each buttons}}
          {{> Button class=this.class type=this.type form=this.form text=this.text id=this.id}}
        {{/each}}
      </div>
    {{/FormWrapper}}
{{/AuthContainer}}