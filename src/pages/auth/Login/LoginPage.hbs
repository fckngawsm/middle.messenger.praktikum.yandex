{{#> AuthContainer}}
    {{#> FormWrapper}}
      <h1 class="form__title">Вход</h1>
      {{#> Form id="login-form"}}
          {{> Input id="login" type="text" placeholder="Логин" name='login' label="Логин" required="true" helperText="Неверный логин"}}
          {{> Input id="password" type="password" placeholder="Пароль" name="password" label="Пароль" required="true"}}
      {{/Form}}
      {{#> Spacer}}{{/Spacer}}
      <div class="button__group">
          {{> Button class=button.class type=button.type form=button.form text=button.text id=button.id}}
          {{> Link id=link.id href=link.href linkText=link.linkText}}
      </div>
    {{/FormWrapper}}
{{/AuthContainer}}